# React Frontend Configuration for Flask Integration
# Copy this file to your Flask root directory as .env.react

# Enable/disable React frontend serving
# Set to 'true' to serve React frontend instead of Flask templates
# Set to 'false' to use Flask templates (default)
SERVE_REACT_FRONTEND=false

# Enable CORS for development
# Set to 'true' when running React dev server on different port
# Set to 'false' for production (default)
ENABLE_CORS_DEV=false

# Development configuration example:
# SERVE_REACT_FRONTEND=false
# ENABLE_CORS_DEV=true

# Production configuration example:
# SERVE_REACT_FRONTEND=true
# ENABLE_CORS_DEV=false

# Additional Flask configuration (optional)
# FLASK_ENV=production
# FLASK_DEBUG=false